<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2F03A9F4"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_second_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SecondF get Message"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_second_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="send Message to First"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_second_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="SecondF get Object"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_second_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="send Object to First"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>